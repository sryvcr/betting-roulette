{
    "compileOnSave": false,
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "moduleResolution": "Node",
        "outDir": "./dist/src",
        "baseUrl": "./src",
    },
    "include": [
        "typings.d.ts",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "test"
    ]
}
